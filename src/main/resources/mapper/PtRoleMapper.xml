<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rufeng.healthman.mapper.PtRoleMapper">

    <resultMap id="BaseResultMap" type="com.rufeng.healthman.pojo.DO.PtRole">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="roleName" column="role_name" jdbcType="VARCHAR"/>
        <result property="value" column="value" jdbcType="VARCHAR"/>
        <result property="createdTime" column="created_time" jdbcType="TIMESTAMP"/>
        <result property="lastModifyTime" column="last_modify_time" jdbcType="TIMESTAMP"/>
        <result property="deleted" column="deleted" jdbcType="CHAR"/>
        <result property="userId" column="user_id" jdbcType="BIGINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,role_name,value,
        created_time,last_modify_time,deleted,
        user_id
    </sql>
    <insert id="insertRole">
        INSERT INTO pt_role (user_id, role_name, value) value (#{role.userId}, #{role.roleName}, #{role.value})
    </insert>
    <select id="listRole" resultType="com.rufeng.healthman.pojo.DO.PtRole">
        SELECT
        <include refid="Base_Column_List"/>
        FROM pt_role WHERE user_id = #{userId}
    </select>
</mapper>
